<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen_16dp"
    android:paddingLeft="@dimen/dimen_8dp"
    android:paddingRight="@dimen/dimen_8dp">

    <TextView
        android:id="@+id/tv_received_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/main_gray"
        android:padding="3dp"
        android:textColor="@color/soft_white"
        android:textSize="10sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_chat_face"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/tv_received_time"
        android:layout_marginTop="@dimen/dimen_8dp" />

    <TextView
        android:id="@+id/tv_chat_messsage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/im_leftbubble"
        android:layout_marginRight="80dp"
        android:layout_below="@id/tv_received_time"
        android:layout_toRightOf="@id/iv_chat_face"
        android:layout_marginTop="13dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_16sp" />
</RelativeLayout>